<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TLOZ.MVVM.Pages.HomePage">

    <ContentPage.Content>
        <Grid Padding ="5,0,5,0" RowDefinitions="Auto"  BackgroundColor="#0D9263">
            <StackLayout Grid.Row="0">
                <ListView SelectedItem="{Binding Result, Mode=TwoWay}" ItemsSource="{Binding gamesList}" BackgroundColor="#0E5135" Grid.ColumnSpan="1">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Padding="20,20,20,20" ColumnDefinitions="Auto,*">
                                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,100" Padding="5,0,5,0">
                                        <Label Text="{Binding name}" Grid.Row="0"  HorizontalOptions="Start" FontSize="20" TextColor="#000000" Grid.Column="1"/>
                                        <Label Text="{Binding released_date}" Grid.Row="1"  HorizontalOptions="Start" FontSize="20" TextColor="#000000" Grid.Column="1"/>
                                        <Label Text="{Binding description}" Grid.Row="2"  HorizontalOptions="Start" FontSize="20" TextColor="#000000" Grid.Column="1"/>

                                    </Grid>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </Grid>

    </ContentPage.Content>
   

</ContentPage>