<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TLOZ.MVVM.Pages.HomePage">
             

        <StackLayout>
        <Button Text="Search" Command="{Binding SearchCommand}" Grid.Column="1" BackgroundColor="#2E333A" TextColor="White"/>

        <Label Text="{Binding Result.count}" HorizontalOptions="Center" TextColor="Black"/>
        <Label Text="{Binding name}" HorizontalOptions="Center" TextColor="Black"/>

        <ListView SelectedItem="{Binding Display, Mode=TwoWay}" ItemsSource="{Binding gamesList}" BackgroundColor="#2E333A" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="20,20,20,20" ColumnDefinitions="Auto,*">
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,100,Auto" Padding="5,0,5,0" Grid.Column="1">
                                <Label Text="Title" Grid.Row="0"  HorizontalOptions="Start" FontSize="20" TextColor="LightBlue"/>
                                <Label Text="{Binding name}" TextColor="FloralWhite" Grid.Row="1"/>
                                <Label Text="skrt" TextColor="FloralWhite" Grid.Row="2"/>

                            </Grid>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>





</ContentPage>